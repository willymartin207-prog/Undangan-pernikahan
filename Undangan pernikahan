<script>
/* =======================
   DATA CONFIG (EDIT EASY)
=========================== */
const weddingDate = new Date("2026-09-20T08:00:00");

/* =======================
   LOADER
=========================== */
window.onload = () => {
  setTimeout(()=>document.getElementById('loader').classList.add('hide'),1000);
};

/* =======================
   OPEN INVITATION
=========================== */
document.getElementById('openInvitation').onclick = () => {
  document.getElementById('cover').style.display="none";
  document.getElementById('bgm').play();
};

/* =======================
   COUNTDOWN
=========================== */
const cd = document.getElementById('countdown');
setInterval(()=>{
  const now = new Date();
  const diff = weddingDate - now;
  if(diff < 0) return;
  const d = Math.floor(diff/86400000);
  const h = Math.floor(diff/3600000)%24;
  const m = Math.floor(diff/60000)%60;
  const s = Math.floor(diff/1000)%60;
  cd.innerHTML = `
    <div class="time-box"><h3>${d}</h3><span>Hari</span></div>
    <div class="time-box"><h3>${h}</h3><span>Jam</span></div>
    <div class="time-box"><h3>${m}</h3><span>Menit</span></div>
    <div class="time-box"><h3>${s}</h3><span>Detik</span></div>
  `;
},1000);

/* =======================
   SCROLL ANIMATION
=========================== */
const observer = new IntersectionObserver(entries=>{
  entries.forEach(e=>{
    if(e.isIntersecting) e.target.classList.add('show');
  });
},{threshold:.2});
document.querySelectorAll('.fade-up').forEach(el=>observer.observe(el));

/* =======================
   LIGHTBOX
=========================== */
const lb = document.getElementById('lightbox');
document.querySelectorAll('.gallery img').forEach(img=>{
  img.onclick=()=>{
    lb.style.display='flex';
    lb.querySelector('img').src=img.src;
  }
});
lb.onclick=()=>lb.style.display='none';

/* =======================
   GUEST NAME FROM URL
=========================== */
const params = new URLSearchParams(window.location.search);
const to = params.get('to');
if(to){
  document.getElementById('guestName').innerText = `Kepada Yth. ${to}`;
}
</script>

